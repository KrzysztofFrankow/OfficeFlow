@model IEnumerable<OfficeFlow.Application.Users.Models.ListModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Pracownicy</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Utwórz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Data urodzenia
            </th>
            <th>
                Miasto
            </th>
            <th>
                Ulica
            </th>
            <th>
                Numer domu
            </th>
            <th>
                Numer mieszkania
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApartmentNumber)
            </td>
            <td style="text-align: right">
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Users" asp-action="Details" asp-route-publicId="@item.PublicId">Szczegóły</a>
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Users" asp-action="Edit" asp-route-publicId="@item.PublicId">Edytuj</a>
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Users" asp-action="Delete" asp-route-publicId="@item.PublicId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
