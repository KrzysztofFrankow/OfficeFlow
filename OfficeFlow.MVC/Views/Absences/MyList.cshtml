@using OfficeFlow.Application.Enums

@model IEnumerable<OfficeFlow.Application.Absences.Models.ListModel>

@{
    ViewData["Title"] = "MyList";
}

<h1>Moje wnioski</h1>
<p>
    <a class="btn btn-outline-warning" asp-action="Index">Wróć</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Pracownik
            </th>
            <th>
                Typ nieobecności
            </th>
            <th>
                Data od
            </th>
            <th>
                Data do
            </th>
            <th>
                Data dodania
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td style="text-align: right">
                    <a class="btn btn-outline-dark" asp-area="" asp-controller="Absences" asp-action="Details" asp-route-publicId="@item.PublicId">Szczegóły</a>
                    @if(item.Status == (int)AbsenceStatus.InProgress)
                    {
                        <a class="btn btn-outline-dark" asp-area="" asp-controller="Absences" asp-action="Edit" asp-route-publicId="@item.PublicId">Edytuj</a>
                        <a class="btn btn-outline-dark" asp-area="" asp-controller="Absences" asp-action="Delete" asp-route-publicId="@item.PublicId">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
