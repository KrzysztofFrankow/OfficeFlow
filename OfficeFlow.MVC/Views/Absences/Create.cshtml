@using OfficeFlow.Application.Absences.Commands.CreateAbsences

@model CreateAbsencesCommand

<h1>Złóż wniosek o nieobecność</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Absences/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="UserId">Pracownik</label>
                <input class="form-control" type="number" asp-for="UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Type">Rodzaj nieobecności</label>
                <input class="form-control" type="number" asp-for="Type" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="From">Data od</label>
                <input class="form-control" type="date" asp-for="From" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="To">Data do</label>
                <input class="form-control" type="date" asp-for="To" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Notes">Notatki</label>
                <input class="form-control" type="text" asp-for="Notes" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <td>
                    <a class="btn btn-outline-warning" asp-action="Index">Wróć</a>
                </td>
                <td>
                    <input class="btn btn-outline-success" type="submit" value="Utwórz" />
                </td>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}