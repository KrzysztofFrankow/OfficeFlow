@model OfficeFlow.Application.EFiles.Commands.EditEFiles.EditEFilesCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja e-teczki</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="FolderNumber" class="control-label">Numer folderu</label>
                <input asp-for="FolderNumber" class="form-control" />
                <span asp-validation-for="FolderNumber" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="StorageLocation" class="control-label">Miejsce przechowywania</label>
                <input asp-for="StorageLocation" class="form-control" />
                <span asp-validation-for="StorageLocation" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Notes" class="control-label">Notatki</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <td>
                    <a class="btn btn-outline-warning" asp-action="Index">Wróć do listy</a>
                </td>
                <td>
                    <input type="submit" value="Zapisz" class="btn btn-outline-success" />
                </td>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
