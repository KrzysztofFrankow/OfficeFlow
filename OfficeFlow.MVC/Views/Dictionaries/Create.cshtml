@using OfficeFlow.Application.Dictionaries.Commands.CreateDictionaries

@model CreateDictionariesCommand

<h1>Utwórz nową e-teczkę</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Dictionaries/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Type">Typ</label>
                <select asp-for="Type" asp-items="ViewBag.Types" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Nazwa</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <td>
                    <a class="btn btn-outline-warning" asp-action="Index">Wróć do listy</a>
                </td>
                <td>
                    <input class="btn btn-outline-success" type="submit" value="Utwórz" />
                </td>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
